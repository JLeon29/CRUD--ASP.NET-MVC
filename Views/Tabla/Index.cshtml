@model List<LUCKYSAC.Models.VieModels.ClientesViewModell>
@{
    ViewBag.Title = "Index";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/Estilos/estilosindex.css" />
</head>

<h2>Mantenimiento de Clientes</h2>

<br />
<div class="row">
    <a href="~/Tabla/Nuevo" class="btn btn-primary">Agregar</a>
</div>
<br />
<div class="row" >
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>Código</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>DNI</th>
                <th>Telefono</th>
                <th>Correo</th>
                <th>Direccion</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdCliente</td>
                    <td>@item.Nombres</td>
                    <td>@item.Apellidos</td>
                    <td>@item.DNI</td>
                    <td>@item.Telefono</td>
                    <td>@item.Correo</td>
                    <td>@item.Direccion</td>
                    <td>
                        <a class="btn btn-success" href="~/Tabla/Editar/@item.IdCliente">Editar</a>
                        <a class=" btn btn-danger" href="~/Tabla/Eliminar/@item.IdCliente">Eliminar</a>
                    </td>
                </tr>
            }


        </table>


    </div>


</div>

